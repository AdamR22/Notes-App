<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/note_item_timestamp_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AddNoteCardStyle" parent="CardView">
        <item name="android:focusable">true</item>
        <item name ="android:clickable">true</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryVariant</item>
        <item name="strokeColor">?attr/colorPrimaryVariant</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="NoteItemCardStyle" parent="CardView">
        <item name="android:focusable">true</item>
        <item name ="android:clickable">true</item>
        <item name="android:layout_width">166dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/note_item_card_fill_color</item>
        <item name="strokeColor">@color/note_item_card_stroke_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="NoteItemCardStyleHorizontal" parent="CardView">
        <item name="android:focusable">true</item>
        <item name ="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/note_item_card_fill_color</item>
        <item name="strokeColor">@color/note_item_card_stroke_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ThemeNoteTitleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:hint">@string/title_text_hint</item>
        <item name="android:textColorHint">@color/dark_theme_hint_text_color</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ThemeNoteContentEditText" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:hint">@string/content_text_hint</item>
        <item name="android:textColorHint">@color/dark_theme_hint_text_color</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="FabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="AppBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:elevation">4dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>